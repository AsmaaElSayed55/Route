<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Lip/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    @* Start Header *@
    <header>
        <center>
            <nav class="mt-5">

                @* HTML Tags | Static Files *@
                @* <a href="/Home/Index" class="btn btn-primary m-2"> Home </a> *@

                @* HTML Helpers *@

                @* @Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home", htmlAttributes: new {@class= "btn btn-primary m-2"}); *@

                @* Tag Hepler *@

                <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-2"> </a>

                <a href="/Home/Privacy" class="btn btn-warning m-2"> Privacy </a>
                <a href="/Home/AboutUs" class="btn btn-success m-2"> AboutUs </a>
                <a href="/Home/ContactUs" class="btn btn-secondary m-2"> ContactUs </a>
                <a href="/Account/Register" class="btn btn-danger m-2"> Register </a>
                <a href="/Account/Login" class="btn btn-info m-2"> Sign In </a>
            </nav>
        </center>
    </header>
    @* End Header *@

    <div>
        @RenderBody()
    </div>

    @* Start Footer *@
    <footer>
        <center>
            <div>
                <p> CopyRights &copy; Route @DateTime.Now.Year</p>
            </div>
        </center>
    </footer>
    @* End Footer *@

</body>
</html>
